<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="icon" type="image/x-icon" href="/assets/img/favicon.png" />

    <link rel="stylesheet" href="/assets/css/bootstrap.min.css" />

    <link rel="stylesheet" href="/assets/css/lnr-icon.css" />

    <link rel="stylesheet" href="/assets/css/font-awesome.min.css" />

    <link rel="stylesheet" href="/assets/css/style.css" />
    <title>Forgot Password Page</title>
  </head>

  <body>
    <div id="loader-wrapper">
      <div class="loader">
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
      </div>
    </div>

    <div class="inner-wrapper login-body grow">
      <div class="login-wrapper">
        <div class="container">
          <div class="loginbox shadow-sm">
            <div class="login-left">
              <img class="img-fluid" src="/assets/img/logo.png" alt="Logo" />
            </div>
            <div class="login-right">
              <div class="login-right-wrap">
                <h1 class="mb-3">Change Password</h1>

                <form>
                  <div class="form-group">
                    <input
                      class="form-control"
                      type="password"
                      name="curruntPass"
                      id="cpassword"
                      placeholder="currunt Password"
                    />
                  </div>
                  <div class="form-group">
                    <input
                      class="form-control"
                      type="password"
                      name="newPass"
                      id="newpassword"
                      placeholder="new password"
                    />
                  </div>
                  <div class="form-group">
                    <input
                      class="form-control"
                      type="password"
                      name="reNewPass"
                      id="re-password"
                      placeholder="re-enter password"
                    />
                  </div>
                  <div class="form-group mb-0">
                    <button
                      class="btn btn-theme ctm-border-radius text-white btn-block button-1"
                      type="submit"
                    >
                      change password
                    </button>
                  </div>
                </form>

                <div class="text-left dont-have">
                  <a href="/login"><i class="fa fa-angle-double-left"></i> Go back</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/assets/js/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>

    <script src="/assets/js/popper.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>

    <script src="/assets/plugins/theia-sticky-sidebar/ResizeSensor.js"></script>
    <script src="/assets/plugins/theia-sticky-sidebar/theia-sticky-sidebar.js"></script>

    <script src="/assets/js/script.js"></script>
  </body>
</html>
